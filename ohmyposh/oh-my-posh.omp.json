{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "#3A3A3A",
                    "foreground": "#ffffff",
                    "style": "plain",
                    "template": " \uf0e7 ",
                    "type": "root"
                },
                {
                    "type": "shell",
                    "style": "diamond",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "background": "#458588",
                    "foreground": "#282828",
                    "properties": {
                        "mapped_shell_names": {
                            "pwsh": "POWERSHELL",
                            "bash": "BASH"
                        }
                    }
                },
                {
                    "background": "#977b63",
                    "foreground": "#282828",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "style": "agnoster_short",
                        "max_depth": 3
                    },
                    "style": "powerline",
                    "template": " {{ .Path }} ",
                    "type": "path",
                    "max_depth": "2",
                    "mixed_threshold": "4"
                },
                {
                    "background": "#78a5be",
                    "foreground": "#111111",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " {{ .HEAD }} ",
                    "type": "git"
                },
                {
                    "background": "#4063D8",
                    "foreground": "#111111",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
                    "type": "python"
                },
                {
                    "type": "kubectl",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "background": "#b3a56f",
                    "foreground": "#111111",
                    "template": " ⎈ {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} ",
                    "properties": {
                        "context_aliases": {}
                    }
                },
                {
                    "type": "aws",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "foreground": "#111111",
                    "background": "#607d8b",
                    "template": " \uE7AD {{ .Profile }}{{ if .Region }}@{{ .Region }}{{ end }} "
                },
                {
                    "type": "command",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "background": "#74995b",
                    "foreground": "#111111",
                    "properties": {
                      "shell": "bash",
                      "command": "FILE=$(grep -n -l 'startUrl' ${HOME}/.aws/sso/cache/*.json | head -n1); EXPIRATION=$(jq -r '.expiresAt' ${FILE} | xargs -I {} date -jf '%Y-%m-%dT%H:%M:%SZ' {} +%s | sort -n | tail -1); NOW=$(date +%s); REMAINING=$((EXPIRATION-NOW)); if [ $REMAINING -gt 0 ]; then date -u -r $REMAINING +\"%H:%M\"; else echo 'Expired'; fi"
                    }
                },
                {
                    "background": "#8f5151",
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \ue20f ",
                    "type": "status"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "template": "\n$"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}
