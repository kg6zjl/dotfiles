{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#FFEE58",
                    "style": "plain",
                    "template": " \uf0e7 ",
                    "type": "root"
                },
                {
                    "type": "shell",
                    "style": "diamond",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "foreground": "#ffffff",
                    "background": "#0077c2",
                    "properties": {
                        "mapped_shell_names": {
                            "pwsh": "POWERSHELL",
                            "bash": "BASH"
                        }
                    }
                },
                {
                    "background": "#91ddff",
                    "foreground": "#100e23",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "style": "full"
                    },
                    "style": "powerline",
                    "template": " {{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "#95ffa4",
                    "foreground": "#193549",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " {{ .HEAD }} ",
                    "type": "git"
                },
                {
                    "background": "#906cff",
                    "foreground": "#100e23",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} ",
                    "type": "python"
                },
                {
                    "type": "kubectl",
                    "style": "powerline",
                    "powerline_symbol": "\ue0b0",
                    "foreground": "#000000",
                    "background": "#ebcc34",
                    "template": " ⎈ {{.Context}}{{if .Namespace}} :: {{.Namespace}}{{end}} ",
                    "properties": {
                        "context_aliases": {}
                    }
                },
                {
                    "background": "#ff8080",
                    "foreground": "#ffffff",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": " \ue20f ",
                    "type": "status"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "template": "\n$"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 2
}
